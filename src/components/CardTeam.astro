---
interface Props { 
  img: string
  name: string
  rol: string
  description: string
}

const { img, name, rol, description }: Props = Astro.props
---


<div class="container">
  <img src={img} alt="">
  <div>
    <h4>{name}</h4>
    <h5>{rol}</h5>
    <p>{description}</p>
  </div>
</div>

<style>
  .container { 
    width: 100%;
  }

  img { 
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .container div { 
    display: grid;
    gap: 5px;
    margin-top: 20px;
  }

  h4 { 
    font-size: 1.5rem;
  }

  h5 { 
    color: #cfb47c;
    font-size: 1.25rem;
  }
  
  p { 
    margin-top: 10px;
    font-size: 1.18rem;
  }
</style>
